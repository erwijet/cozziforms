{
	"name": "cozziforms",
	"version": "1.0.0",
	"main": "server.ts",
	"license": "MIT",
	"scripts": {
		"build-sass": "sass --no-source-map -q ./sass/styles.scss ./public/css/styles.css",
		"build-client": "node ./tasks/bundle-client",
		"build-server": "ts-node server.ts",
		"watch-sass": "nodemon --ext scss --watch sass --exec yarn build-sass",
		"watch-client": "nodemon --ext js --watch client/**/* --exec yarn run build-client",
		"watch-server": "nodemon --ext ts,json --ignore client/*.* --exec yarn build-server",
		"dockerize": "node tasks/dockerize.js",
		"babel": "babel --root-mode upward --ignore require.js --copy-files client-lib --out-dir public/js",
		"production": "yarn run build-sass && yarn run build-client && yarn run build-server"
	},
	"dependencies": {
		"@babel/polyfill": "^7.12.1",
		"@babel/preset-env": "^7.14.5",
		"babelify": "^10.0.0",
		"browserify": "^17.0.0",
		"bulma": "^0.9.2",
		"cookie-parser": "^1.4.5",
		"core-js": "2",
		"cross-spawn": "^7.0.3",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"jquery": "^3.6.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.12",
		"morgan": "^1.10.0",
		"pug": "^3.0.2",
		"uglifyify": "^5.0.2"
	},
	"devDependencies": {
		"@babel/cli": "^7.14.5",
		"@babel/core": "^7.14.6",
		"@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
		"@types/cookie-parser": "^1.4.2",
		"@types/express": "^4.17.12",
		"@types/jquery": "^3.5.5",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/morgan": "^1.9.2",
		"babel-jest": "^27.0.2",
		"nodemon": "^2.0.7",
		"regenerator-runtime": "^0.13.7",
		"sass": "^1.34.0",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2"
	}
}
