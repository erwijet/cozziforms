{
	"name": "cozziforms",
	"version": "1.0.0",
	"main": "server.ts",
	"license": "MIT",
	"scripts": {
		"start": "ts-node server.ts",
		"build-sass": "sass --no-source-map -q ./sass/styles.scss ./public/css/styles.css",
		"build-client": "node ./tasks/build-client",
		"build-server": "ts-node server.ts",
		"watch-sass": "nodemon --ext scss --watch sass --exec yarn build-sass",
		"watch-client": "nodemon --ext ts --watch client --exec yarn run build-client",
		"watch-server": "nodemon --ext ts,json --ignore client/*.* --exec yarn build-server",
		"dockerize": "node tasks/dockerize.js"
	},
	"dependencies": {
		"browserify": "^17.0.0",
		"bulma": "^0.9.2",
		"cookie-parser": "^1.4.5",
		"cross-spawn": "^7.0.3",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"jquery": "^3.6.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.12.12",
		"morgan": "^1.10.0",
		"pug": "^3.0.2",
		"tsify": "^5.0.4"
	},
	"devDependencies": {
		"@types/cookie-parser": "^1.4.2",
		"@types/dotenv": "^8.2.0",
		"@types/express": "^4.17.12",
		"@types/jquery": "^3.5.5",
		"@types/jsonwebtoken": "^8.5.1",
		"@types/mongoose": "^5.10.5",
		"@types/morgan": "^1.9.2",
		"nodemon": "^2.0.7",
		"sass": "^1.34.0",
		"ts-node": "^10.0.0",
		"typescript": "^4.3.2"
	}
}
