extends layout

append head
    style.
        #tableColumn.animate {
            margin-right: 50%
        }

        #tableColumn {
            transition: margin-right 400ms;
        }

        tr th {
            text-align: center !important;
        }

        tr th.excludeWhenSmall {
            transition: opacity 400ms;
            transition: text-align: 400ms;
        }

        tr th.excludeWhenSmall.animate {
            opacity: 0;
            text-align: center !important;
        }

    script(src='/js/manage_items.js')
block body
    .hero.is-primary
        .hero-body
            p.title Manage Items
    .box
        nav.level.is-fullwidth.is-mobile
            .level-left
                .level-item
                    #newitemBtn.button.is-outlined.is-primary
                        span.icon
                            i.fas.fa-plus-circle
                        span New Item
                .level-item
                    .button.is-outlined.is-primary
                        span.icon
                            i.fas.fa-parachute-box 
                        span Manage Vendors
                .level-item
                    .button.is-outlined.is-primary
                        span.icon
                            i.fas.fa-folder
                        span Manage Categories  
            .level-right
                .level-item 
                    .field
                        .control.has-icons-left
                            input.input(type='text' placeholder='Search Items')
                            span.icon.is-left
                                i.fas.fa-search
    .columns
        #tableColumn.column
            .box
                table.table.is-fullwidth
                    thead
                        tr
                            th Vendor
                            th.excludeWhenSmall Category 
                            th Item Name
                            th.excludeWhenSmall Unit Name